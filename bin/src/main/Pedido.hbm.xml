<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN' 'http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd'>

<hibernate-mapping>

    <class name="modelo.Pedido" table="pedido" abstract="true">

        <id name ="nPedido" type="int" column="nPedido"/>
        <property name="cantidad" type="int" column="cantidad"/>
        <property name="fecha" type="date" column="fecha"/>
        <property name="precioP" type="double" column="precio"/>

    </class>
</hibernate-mapping>