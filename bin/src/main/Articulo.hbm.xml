<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN' 'http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd'>

<hibernate-mapping>
    <class name="Articulo" table="articulo">
        <id name="codigo" type="string" column="codigo">
            <generator class="identity"/>
        </id>
        <property name="descripcion" type="string" column="descripcion" />
        <property name="precio" type="float" column="precio"/>
        <property name="gEnvio" type="float" column="gEnvio"/>
        <property name="pEnvio" type="integer" column="pEnvio"/>
    </class>
</hibernate-mapping>