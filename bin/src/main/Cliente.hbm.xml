<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC '-//Hibernate/Hibernate Mapping DTD 3.0//EN' 'http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd'>

<hibernate-mapping>
    <class name="Cliente" table="cliente">
        <id name="email" type="string" column="email">
            <generator class="identity"/>
        </id>
        <property name="nombre" type="string" column="descripcion" />
        <property name="domicilio" type="string" column="domicilio"/>
        <property name="nif" type="string" column="gEnvio"/>
    </class>
</hibernate-mapping>